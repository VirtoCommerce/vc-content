{%- include 'prepare_layout' -%}
<!DOCTYPE html>
<html ng-app="storefrontApp" lang="en">
<head>
    <link rel="preconnect" href="https://fastgull.io" />
    <link rel="preconnect" href="https://connect.facebook.net" />
    <link rel="preconnect" href="https://p.adsymptotic.com" />
    <link rel="preconnect" href="https://cdnjs.cloudflare.com/" />
    {% include 'google-tag-manager-head' %}
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Virto Commerce" />

    {% if page_description != '' %}
        <meta name="description" content="{{ page_description | escape }}" />
    {% else %}
        {% assign meta_description = 'VirtoCommerce is the enterprise-level Microsoft .NET ecommerce platform for complex ecommerce. Virto Commerce is a flexible B2B ecommerce solution based on Microsoft.NET that offers powerful tools for enterprise business users.' %}
        {% if page.meta_fields != blank %}
            {% if page.meta_fields.markup_webpage_description != null and page.meta_fields.markup_webpage_description != '' %}
                <meta name="description" content="{{page.meta_fields.markup_webpage_description}}" />
            {% else %}
                <meta name="description" content="{{meta_description}}" />
            {% endif %}
        {% else %}
            <meta name="description" content="{{meta_description}}" />
        {% endif %}
    {% endif %}

    {% include 'meta-noindex' %}
    {% include 'meta-nofollow' %}
    <meta itemprop="name" content="Virto Commerce" />
    <meta itemprop="description" content="Multi Channel Ecommerce Platform | Enterprise Shopping Cart Software | VirtoCommerce" />
    <meta itemprop="image" content="{{ 'virtocommerce.png' | asset_url }}" />
    <meta name="google-site-verification" content="U2sXV9qIWUb-RceW8MpL-EfFnwvOqCo_jLWIDL8c6xI" />
    <link type="image/x-icon" rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}" />

    {% page_title = 'ASP.NET ecommerce platform - Virto Commerce' %}
    {% if page.meta_fields != blank %}
        {% if page.meta_fields.header != null and page.meta_fields.header != '' %}
            {% assign page_title = page.meta_fields.header %}
        {% endif %}
    {% endif %}
    <title>{{page_title}}</title>

    {{ 'styles.min.css?' | append css_version | asset_url | stylesheet_tag }}
    <link rel="preload" href="{{ 'jquery.fancybox.min.css' | asset_url }}" as="style" onload="this.rel='stylesheet'">
    <link rel="preload" href="../../fonts/CircularStd-Book.woff" as="font" type="font/woff" crossorigin>
    <link rel="preload" href="../../fonts/CircularStd-Bold.woff" as="font" type="font/woff" crossorigin>
    <link rel="preload" href="../../fonts/CircularStd-Black.woff" as="font" type="font/woff" crossorigin>
    <link rel="preload" href="../../fonts/CircularStd-Medium.woff" as="font" type="font/woff" crossorigin>
    {% if template == 'index' %}
        <link rel="preload" href="https://ik.imagekit.io/je8lpsqkoi/assets/images/home/bg.png" as="image">
        <link rel="preload" href="https://ik.imagekit.io/je8lpsqkoi/assets/images/home/bg-mobile.svg" as="image">
    {% endif %}
    {{ content_for_header }}
    <base href="{{ '/' | absolute_url }}" />
    {% include 'canonical-urls' %}
    <script>
        var BASE_URL = '{{ "/" | full_url }}';
    </script>
    {% include 'url-segments-variables' %}
    {% include 'markup-corporation' %}
    {% include 'markup-website' %}
    {% if article %}
        {% include 'markup-blog' %}
    {% else %}
        {% include 'markup-webpage' %}
    {% endif %}
    {% include 'markup-opengraph' %}
    {% include 'twitter-cards-meta' %}
    {% include 'target-account-service-url' %}
    {% include 'hot-jar-script' %}
    {% if page_settings.backgroundImage != blank and page_settings.backgroundImage.url != '' %}
        <style>
            body {
                background: url({{page_settings.backgroundImage.url | image_url}});
                background-position: center;
                background-size: cover;
            }
        </style>
    {% endif %}
</head>
<body>
    {% include 'google-tag-manager-body' %}
    <div class="footer-ribbon w-100">
        {% if current_article.meta_fields.ribbonCTAVisibility == 'True' %}
            {% assign page_url_starts_with_blog = (page.url | slice: 0, 5) == 'blog/' %}
            {% if page_url_starts_with_blog == true %}
                {% assign blog_ribbon_text = '' %}
                {% if settings.blogRibbonText != '' %}
                    {% assign blog_ribbon_text = settings.blogRibbonText %}
                {% endif %}

                {% if current_article.meta_fields.ribbonCTAText != blank %}
                    {% if current_article.meta_fields.ribbonCTAText != '' %}
                        {% assign blog_ribbon_text = current_article.meta_fields.ribbonCTAText %}
                    {% endif %}
                {% endif %}

                <div class="blog-ribbon">
                    <div class="pt-3 pb-3 pl-4 pl-lg-5 pr-4 pr-lg-5 d-sm-flex justify-content-center align-items-center">
                        <div>{{blog_ribbon_text}}</div>

                        {% assign blog_ribbon_button_text = '' %}
                        {% if settings.blogRibbonButtonText != '' %}
                            {% assign blog_ribbon_button_text = settings.blogRibbonButtonText %}
                        {% endif %}

                        {% if current_article.meta_fields.ribbonCTAButtonText != blank %}
                            {% if current_article.meta_fields.ribbonCTAButtonText != '' %}
                                {% assign blog_ribbon_button_text = current_article.meta_fields.ribbonCTAButtonText %}
                            {% endif %}
                        {% endif %}

                        {% assign blog_ribbon_button_minwidth = '' %}
                        {% if current_article.meta_fields.ribbonCTAButtonMinWidth != blank %}
                            {% if current_article.meta_fields.ribbonCTAButtonMinWidth != '' %}
                                {% assign blog_ribbon_button_minwidth = current_article.meta_fields.ribbonCTAButtonMinWidth %}
                            {% endif %}
                        {% endif %}
                        <a class="btn w-100 w-sm-auto mt-2 mt-sm-0 ml-sm-3 justify-content-center" {% if blog_ribbon_button_minwidth != '' %}style="min-width:{{blog_ribbon_button_minwidth}}px"{% endif %}>{{blog_ribbon_button_text}}</a>
                    </div>
                </div>
            {% endif %}
        {% endif %}
        {% if can_track %}
            {% include 'gdpr-cookie-compliance' %}
        {% endif %}
    </div>

    <div id="layout" {% if page == 'index' or template == 'index' %}class="layout--dark"{% endif %}>
        <div class="layout-canvas">
            <div class="swipe">
                <!-- TODO: Fix main-menu for mobile -->
                {% include 'main-menu-mobile' %}
            </div>
            <!-- TODO: getting started is main menu, must be renamed -->
            {% include 'getting-started' %}
            <article class="main" role="main">
                {{ content_for_layout }}
            </article>
            {% include 'footer' %}
        </div>
    </div>
    {{ 'main.min.js?' | append main_min_js_version | asset_url | script_tag }}
    {% include 'slider-asset' %}
    <script>
	    $(function () {
		    $('#cookieConsentAccept').on('click', function (event) {
			    event.preventDefault();
			    document.cookie = '{{consent_cookie }}';
			    $('.cookie-bar').hide();
		    });
	    });
    </script>

    {% if page == 'about-us' %}
	    {{ 'js/team.js' | asset_url | script_tag }}
    {% endif %}
</body>
</html>
