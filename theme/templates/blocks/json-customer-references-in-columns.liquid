<div id="{{ block.__id }}" class="block {{block.containerAlignment}} {{block.topPadding}} {{block.bottomPadding}}
    {% if block.topDivider == 'True' %} block--divider-top {% endif %}
    {% if block.bottomDivider == 'True' %} block--divider-bottom {% endif %}
    {% if block.backgroundColorHex == '' %}{{block.backgroundColor}}{% endif %}"
    {% if block.backgroundColorHex != '' %}style="background-color:{{block.backgroundColorHex}}"{% endif %}">
    <div class="block__inner container">
        <div class="row {% if block.containerAlignment == 'block--align-center' %} justify-content-center {% endif %}">
            <div class="block__text {{block.textAreaWidth}}">
                {% if block.title != '' %}
                    {% include 'title-font-size' %}
                    {% include 'seo-text' tag: block.titleSeoTag, text: block.title, class: ('block__t ' | append titleFontSize) %}
                {% endif %}
                
                {% include 'headings' headings: block.headings %}

                {% if block.subtitle != '' %}
                    <div class="block__space"></div>
                    {% include 'seo-text' tag: block.subtitleSeoTag, text: block.subtitle, class: 'block__descr' %}
                    <div class="block__space block__space--size-lg"></div>
                {% else %}
                    <div class="block__space block__space--size-lg"></div>
                {% endif %}
            </div>
        </div>

        {% if block.items.size > 0 %}
            <div class="list list-items list-items--cols-{{block.columnsCount}} list-items--reviews">
            {% for item in block.items %}
                {% assign color = '' %}
                {% if item.overlayColor != 'none' and item.overlayColor != '' %}
                    {% assign color = item.overlayColor %}
                {% endif %}

                {% if item.overlayColorHex != '' %}
                    {% assign color = item.overlayColorHex %}
                {% endif %}

                {% if color != '' %}
                    <style>
                        #block-{{block.id}}-item-{{forloop.index}}:after
                        {
                            background: {{color}};
                            opacity:.7;
                            bottom: 0;
                            content: ' ';
                            left: 0;
                            position: absolute;
                            right: 0;
                            top: 0;
                            z-index: 5;
                        }
                    </style>
                {% endif %}

                <div class="list__item">
                    {% if item.image != '' and item.image.url != '' %}
                        <div {% if item.overlayColor != 'Null' or item.overlayColor != 'none' or item.overlayColorHex != 'Null' %}id="block-{{block.id}}-item-{{forloop.index}}"{% endif %}
                            class="list__img {% if block.logotypesSize == 'big' %} list__img--big {% endif %} {% if block.logotypesIsRounded == 'False' %} list__img--not-rounded {% endif %}">
                            <img src="{{item.image.url}}" title="{{item.image.altText}}" class="list__pic {% if block.logotypesIsRounded == 'False' %}list__pic--not-rounded{% endif %}" />
                        </div>
                    {% endif %}

                    {% if item.name != '' %}
                        <div class="list__t">{{item.name}}</div>
                    {% endif %}

                    {% if item.jobTitle != '' %}
                        <div class="list__pos">{{item.jobTitle}}</div>
                    {% endif %}
                    
                    {% if item.company != '' %}
                        <div class="list__company">{{item.company}}</div>
                    {% endif %}

                    {% if item.review != '' %}
                        <div class="list__descr">{{item.review}}</div>
                    {% endif %}

                    {% include 'block-buttons' firstBtn: item.casestudyLink %}
                </div>
            {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
