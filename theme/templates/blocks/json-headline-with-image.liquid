<div id="{{ block.__id }}" class="block {{block.containerAlignment}} {{block.backgroundColor}} {{block.topPadding}} {{block.bottomPadding}}
    {% if block.topDivider == 'True' %} block--divider-top {% endif %}
    {% if block.bottomDivider == 'True' %} block--divider-bottom {% endif %}
    {% if block.backgroundColorHex == '' %}{{block.backgroundColor}}{% endif %}"
    {% if block.backgroundColorHex != '' %}style="background-color:{{block.backgroundColorHex}}"{% endif %}">
    <div class="block__inner container">
        <div class="row align-items-center">
            {% capture image_container %}
                <div class="col-lg-auto">
                    {% if block.containerImage.url != '' %}
                        <div class="block__media {% if block.fixedImageSize == 'True' %}block__media--auto{% endif %}">
                            {% if block.fixedImageSize == 'True' %}
                                <img data-src="{{ block.containerImage.url | image_url: block.imageWidth, block.imageHeight }}" title="{{block.containerImage.altText}}" class="block__pic lazyload" />
                            {% else %}
                                <img data-src="{{ block.containerImage.url | image_url }}" title="{{block.containerImage.altText}}" class="block__pic lazyload" />
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% endcapture %}

            {% if block.horizontalAlignment == 'left' %}
                {{image_container}}
            {% endif %}

            <div class="col-lg">
                {% if block.logoImage.url != '' %}
                    <img class="headline-logo lazyload" width="auto" height="auto" src="{{block.logoImage.url | image_url}}" />
                {% endif %}

                {% if block.note != '' %}
                    {% include 'seo-text' tag: block.noteSeoTag, text: block.note, class: 'block__note' %}
                    <div class="block__space"></div>
                {% endif %}

                {% if block.title != '' %}
                    {% include 'seo-text' tag: block.titleSeoTag, text: block.title, class: 'block__t' %}
                {% endif %}
                    
                {% include 'headings' headings: block.headings %}
                <div class="block__space"></div>

                {% if block.subtitle != '' %}
                    {% include 'seo-text' tag: block.subtitleSeoTag, text: block.subtitle, class: 'block__descr' %}
                {% endif %}

                {% include 'block-buttons' firstBtn: block.firstButton, secondBtn: block.secondButton %}
            </div>

            {% if block.horizontalAlignment == 'right' %}
                {{image_container}}
            {% endif %}
        </div>
    </div>
</div>
