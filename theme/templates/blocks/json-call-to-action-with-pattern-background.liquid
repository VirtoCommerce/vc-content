<div id="{{block.__id}}">
    {% assign text_area_width = '' %}
    {% if block.textAreaWidth != 'none' %}
    {% assign text_area_width = 'col-sm-' | append: block.textAreaWidth %}
    {% endif %}

    {% assign text_alignment = 'center' %}
    {% if block.textAlignment != '' %}
    {% assign text_alignment = block.textAlignment | prepend: 'text-sm-' %}
    {% endif %}

    <div class="block {{block.topPadding}} {{block.bottomPadding}}">
        <div class="block__inner container font-circular">
        {% if block.pattern == 'pattern1' %}
            <div class="row flex-column flex-sm-row cta ml-auto mr-auto">
                <div class="col col-sm-8 first-col text-center d-flex justify-content-center align-items-center bg-gradient">
                    <div class="text-center {{text_area_width}} {{text_alignment}} p-5 p-sm-0">{{block.title}}</div>
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-1/hexagon-part.png" class="pattern-inner-img d-none d-sm-block" style="top:0;left:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-1/wave.png" class="pattern-inner-img d-none d-sm-block" style="top:34px;left:44px" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-1/dots-left.png" class="pattern-inner-img d-none d-sm-block" style="top:0;right:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-1/arrow.png" class="pattern-inner-img d-none d-sm-block" style="bottom:5px;right:-52px;z-index:5" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-1/mobile/part-of-hexagon.png" class="pattern-inner-img d-block d-sm-none z-index-1" style="top:0;left:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-1/wave.png" class="pattern-inner-img d-block d-sm-none z-index-1" style="top:40px;left:19px" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-1/mobile/arrow.png" class="pattern-inner-img d-block d-sm-none z-index-1" style="bottom:-43px;left:115px" />
                </div>
                <div class="col col-sm-4 d-flex justify-content-center pt-5 pt-sm-0 bg-black">
                    {% include 'block-buttons' blockClass: 'mt-0', firstBtn: block.firstButton %}
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-1/dots-right.png" class="pattern-inner-img d-none d-sm-block" style="top:0;left:0" />
                </div>
            </div>
        {% endif %}

        {% if block.pattern == 'pattern2' %}
            <div class="row flex-column flex-sm-row cta ml-auto mr-auto bg-black">
                <div class="col col-sm-5 col-md-6 d-flex justify-content-center text-center align-items-center z-index-1">
                    <div class="row justify-content-center">
                        <div class="text-center {{text_area_width}} {{text_alignment}}">
                            {{block.title}}
                        </div>
                    </div>
                </div>
                <div class="col col-sm-4 col-md-3 d-flex justify-content-center pt-0 z-index-1">
                    {% include 'block-buttons' blockClass: 'mt-0', firstBtn: block.firstButton %}
                </div>
                <div class="col col-sm-3 d-none d-sm-block col-sm-2">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-2/waves.png" class="pattern-inner-img d-none d-sm-block" style="bottom:0;right:0" />
                </div>
                <img src="../../images/redesign/blocks/cta-with-background/pattern-2/mobile/waves.png" class="pattern-inner-img d-block d-sm-none" style="bottom:0;right:0" />
            </div>
        {% endif %}

        {% if block.pattern == 'pattern3' %}
            <div class="row flex-column flex-sm-row cta ml-auto mr-auto bg-white">
                <div class="col col-sm-8 d-flex justify-content-center text-center align-items-center bg-black pt-5 pt-sm-0 pb-5 pb-sm-0">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-3/part-of-hexagon.png" class="pattern-inner-img d-none d-sm-block" style="top:0;left:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-3/ellipse.png" class="pattern-inner-img d-none d-sm-block" style="top:0;left:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-3/arrow.png" class="pattern-inner-img d-none d-sm-block" style="bottom:5px;right:-52px;z-index:5" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-3/strokes-left.png" class="pattern-inner-img d-none d-sm-block" style="top:0;right:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-3/mobile/part-of-hexagon.png" class="pattern-inner-img d-block d-sm-none" style="top:0;right:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-3/mobile/arrow.png" class="pattern-inner-img d-block d-sm-none" style="bottom:-45px;left:150px" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-3/mobile/strokes.png" class="pattern-inner-img d-block d-sm-none" style="bottom:-15px;right:0" />
                    <div class="row">
                        <div class="text-center {{text_area_width}} {{text_alignment}} z-index-1">
                            {{block.title}}
                        </div>
                    </div>
                </div>
                <div class="col col-sm-4 d-flex justify-content-center pt-5 pt-sm-0 border-h-ec">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-3/strokes-right.png" class="pattern-inner-img d-none d-sm-block" style="top:0;left:0" />
                    {% include 'block-buttons' blockClass: 'mt-0', firstBtn: block.firstButton %}
                </div>
            </div>
        {% endif %}

        {% if block.pattern == 'pattern4' %}
            <div class="row flex-column flex-sm-row cta ml-auto mr-auto bg-black">
                <img src="../../images/redesign/blocks/cta-with-background/pattern-4/waves.png" class="pattern-inner-img w-100 d-block d-sm-none" style="bottom:0;left:0" />
                <div class="col col-sm-8 d-flex justify-content-center text-center align-items-center pb-4 pb-sm-0">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-4/waves.png" class="pattern-inner-img d-none d-sm-block" style="bottom:0;left:0" />
                    <div class="row">
                        <div class="text-center {{text_area_width}} {{text_alignment}}">
                            {{block.title}}
                        </div>
                    </div>
                </div>
                <div class="col col-sm-4 d-flex justify-content-center pt-0">
                    {% include 'block-buttons' blockClass: 'mt-0', firstBtn: block.firstButton %}
                </div>
            </div>
        {% endif %}

        {% if block.pattern == 'pattern5' %}
            <div class="row flex-column flex-sm-row cta ml-auto mr-auto">
                <img src="../../images/redesign/blocks/cta-with-background/pattern-5/mobile/part-of-hexagon.png" class="pattern-inner-img d-block d-sm-none z-index-1" style="top:0;left:0" />
                <div class="col col-sm-10 d-flex flex-column flex-sm-row justify-content-center text-center align-items-center bg-black pt-5 pt-sm-0">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-5/dots-left.png" class="pattern-inner-img d-none d-sm-block" style="bottom:0;right:0" />
                    <div class="row align-items-center flex-column flex-sm-row">
                        <div class="col col-sm-7 col-md-6">
                            <div class="row justify-content-center">
                                <div class="text-center {{text_area_width}} {{text_alignment}}">
                                    {{block.title}}
                                </div>
                            </div>
                        </div>
                        <div class="col col-sm-5 col-md-6 pt-3 pt-sm-0 z-index-1">
                            {% include 'block-buttons' firstBtn: block.firstButton %}
                        </div>
                    </div>
                </div>
                <div class="col col-sm-2 d-flex justify-content-center bg-gradient pt-6 pt-sm-0">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-5/dots-right.png" class="pattern-inner-img d-none d-sm-block" style="bottom:0;left:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-5/plus.png" class="pattern-inner-img d-none d-sm-block" style="bottom:54px;left:16px" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-5/mobile/dots.png" class="pattern-inner-img d-block d-sm-none" style="bottom:0;right:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-5/plus.png" class="pattern-inner-img d-block d-sm-none" style="top:16px;right:16px" />
                </div>
            </div>
        {% endif %}

        {% if block.pattern == 'pattern6' %}
            <div class="row flex-column flex-sm-row cta ml-auto mr-auto">
                <div class="col col-sm-8 d-flex justify-content-center text-center align-items-center bg-black pt-5 pt-sm-0 pb-5 pb-sm-0">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-6/strokes.png" class="pattern-inner-img d-none d-sm-block" style="top:13px;left:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-6/part-of-hexagon.png" class="pattern-inner-img d-none d-sm-block" style="top:0;left:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-6/arrow.png" class="pattern-inner-img d-none d-sm-block z-index-1" style="bottom:8px;right:-40px" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-6/mobile/ellipse.png" class="pattern-inner-img d-block d-sm-none" style="bottom:0;left:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-6/mobile/part-of-hexagon.png" class="pattern-inner-img d-block d-sm-none z-index-1" style="bottom:-90px;left:0" />
                    <div class="row justify-content-center">
                        <div class="text-center {{text_area_width}} {{text_alignment}}">
                            {{block.title}}
                        </div>
                    </div>
                </div>
                <div class="col col-sm-4 d-none d-sm-flex justify-content-center align-items-center half-colored bg-white pt-0">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-6/dots.png" class="pattern-inner-img d-none d-sm-block z-index-1" style="bottom:0;left:40%" />
                    {% include 'block-buttons' blockClass: 'mt-0 z-index-1', firstBtn: block.firstButton %}
                </div>
                <div class="col d-sm-none bg-white pt-5 pt-sm-0 border-h-ec">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-6/strokes.png" class="pattern-inner-img d-block d-sm-none" style="top:-16px;right:0" />
                    <div class="row justify-content-center">
                        {% include 'block-buttons' blockClass: 'mt-0 z-index-1', firstBtn: block.firstButton %}
                    </div>
                </div>
            </div>
        {% endif %}

        {% if block.pattern == 'pattern7' %}
            <div class="row flex-column flex-sm-row cta ml-auto mr-auto bg-black">
                <div class="col col-sm-8 d-flex justify-content-center text-center align-items-center pt-5 pt-sm-0">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-7/sphere.png" class="pattern-inner-img d-none d-sm-block" style="bottom:0;left:0" />
                    <div class="row justify-content-center ml-auto mr-auto">
                        <div class="text-center {{text_area_width}} z-index-1 {{text_alignment}}">
                            {{block.title}}
                        </div>
                    </div>
                </div>
                <div class="col col-sm-4 d-flex justify-content-center pt-0">
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-7/dots.png" class="pattern-inner-img d-none d-sm-block" style="top:0;right:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-7/part-of-hexagon.png" class="pattern-inner-img d-none d-sm-block" style="top:0;right:0" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-7/arrow.png" class="pattern-inner-img d-none d-sm-block" style="bottom:5px;right:190px" />
                    <img src="../../images/redesign/blocks/cta-with-background/pattern-7/mobile/sphere.png" class="pattern-inner-img d-block d-sm-none w-100" style="bottom:0;left:0" />
                    {% include 'block-buttons' blockClass: 'mt-3 mt-sm-0 mb-5 mb-sm-0 z-index-1', firstBtn: block.firstButton %}
                </div>
            </div>
        {% endif %}
        </div>
    </div>
</div>