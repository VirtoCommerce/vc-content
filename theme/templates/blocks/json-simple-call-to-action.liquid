<div id="{{ block.__id }}" class="block block--padding-half {% if block.topDivider == 'True' %} block--divider-top {% endif %} {% if block.bottomDivider == 'True' %} block--divider-bottom {% endif %}
    {% if block.backgroundColorHex == '' %} {{block.backgroundColor}}" {% else %}" style="background-color:{{block.backgroundColorHex}}" {% endif %}>
    <div class="block__inner container">
        <div class="block__learn {% if block.titleAlignment == 'center' %} block__learn--center {% endif %} {{block.titleColor}}">
            {% include 'seo-text' tag: block.titleSeoTag, text: block.title, class: 'block__t' %}
            
            {% include 'headings' headings: block.headings %}
            
            {% if block.button != '' and block.button.urlText != '' %}
                {% if block.button.style == 'btn-gradient' %}
                    <a class="d-block gradient-btn" href="{{block.button.url}}">
                        <span class="d-flex align-items-center justify-content-center text-center w-100 bg-white" style="background-color:{{block.backgroundColorHex}}">{{block.button.urlText}}</span>
                    </a>
                {% else %}
                    <a href="{{block.button.url}}" class="{{block.button.style}}" {% if block.button.openInNewTab == 'True' %} target="_blank" {% endif %}>{{block.button.urlText}}</a>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>
