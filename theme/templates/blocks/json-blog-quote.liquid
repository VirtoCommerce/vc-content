<div id="{{block.__id}}" class="{% if block.topDivider == 'True' %} block--divider-top {% endif %} {% if block.bottomDivider == 'True' %} block--divider-bottom {% endif %}">
    {% if block.linesColor != '' %}
        <style>
            #{{block.__id}} .block--quote:before {
                background-color: {{block.linesColor}};
            }
            #{{block.__id}} .block--quote:after {
                background-color: {{block.linesColor}};
            }
        </style>
    {% endif %}
    <div class="block block--quote {{block.topPadding}} {{block.bottomPadding}}">
        <div class="container text-center">{{block.text}}</div>
    </div>
</div>