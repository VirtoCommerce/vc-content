{% include 'overlay-color-hex-style-with-counter' predefinedColor: block.backgroundOverlayColor, customColor: block.backgroundOverlayColorHex %}

<div id="{{ block.__id }}">
    <div class="block {{block.topPadding}} {{block.bottomPadding}} {% include 'cover-background-settings' %}>
        <div class="block__inner container">
            <div class="row align-items-center">
                {% if block.horizontalAlignment == 'right' %}
                    <div class="col-lg {{block.verticalAlignment}} {% if block.formOrderFirstInMobile == 'True' %}order-1 order-lg-none{% endif %}">
                        {% if block.note != '' %}
                            {% include 'seo-text' tag: block.noteSeoTag, text: block.note, class: 'block__note' %}
                            <div class="block__space"></div>
                        {% endif %}

                        {% if block.title != '' %}
                            {% include 'seo-text' tag: block.titleSeoTag, text: block.title, class: 'block__t' %}
                        {% endif %}

                        {% include 'headings' headings: block.headings %}
                        <div class="block__space"></div>

                        {% if block.subtitle != '' %}
                            {% include 'seo-text' tag: block.subtitleSeoTag, text: block.subtitle, class: 'block__descr' %}
                        {% endif %}

                        {% include 'block-buttons' firstBtn: block.firstButton, secondBtn: block.secondButton %}
                    </div>
                {% endif %}
                
                <div class="col-lg-auto {% if block.formOrderFirstInMobile == 'True' %}order-0 order-lg-none pt-md-0 pb-5 pb-lg-0{% endif %}">
                    <div class="block__form">
                        <form class="form w-100" {% if block.formId != '' %}id="{{block.formId}}" data-segment-name="{{block.formId}}"{% endif %}
                        {% if block.formName != '' %}name="{{block.formName}}"{% endif %}
                        {% if block.formSubmitRedirectUrl != '' %} data-target-url="{{block.formSubmitRedirectUrl}}" {% endif %}>
                            {% for item in block.formFields %}
                                {% if item.fieldType == 'text' %}
                                    <div class="form-group">
                                        {% if block.showFormLabels == 'True' %}
                                            <label class="form-label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                        {% endif %}
                                        <input data-segment-name="{{item.fieldName}}" {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} name="{{item.fieldName}}"
                                                placeholder="{{item.placeholder}}" type="text" class="form-control" {% include 'input-validation-attributes' inputItem: item %} />
                                        {% include 'form-validation-message' inputItem: item %}
                                    </div>
                                {% elsif item.fieldType == 'email' %}
                                    <div class="form-group">
                                        {% if block.showFormLabels == 'True' %}
                                            <label class="form-label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                        {% endif %}
                                        <input data-segment-name="{{item.fieldName}}" {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} name="{{item.fieldName}}"
                                                placeholder="{{item.placeholder}}" type="text" class="form-control" {% include 'input-validation-attributes' inputItem: item %}
                                                data-val-email="{{item.labelText}} is invalid" />
                                        {% include 'form-validation-message' inputItem: item %}
                                    </div>
                                {% elsif item.fieldType == 'phone' %}
                                    <div class="form-group">
                                        {% if block.showFormLabels == 'True' %}
                                            <label class="form-label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                        {% endif %}
                                        <input data-segment-name="{{item.fieldName}}" {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} name="{{item.fieldName}}"
                                                placeholder="{{item.placeholder}}" type="text" class="form-control" {% include 'input-validation-attributes' inputItem: item %}
                                                data-val-regex="{{item.labelText}} is invalid" data-val-regex-pattern="[0-9]{11,}" />
                                        {% include 'form-validation-message' inputItem: item %}
                                    </div>
                                {% elsif item.fieldType == 'checkbox' %}
                                    <div class="form-group">
                                        <input type="checkbox" class="form-checkbox__input" {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} {% if item.fieldName != '' %} name="{{item.fieldName}}" {% endif %}
                                        {% if item.required == 'True' %}
                                            data-val="true" data-val-mandatory="{% if item.validationMessage == '' %} Please choose this checkbox {% else %} {{item.validationMessage}} {% endif %}"
                                        {% endif %} />
                                        <label class="form-checkbox__label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                        {% include 'form-validation-message' inputItem: item %}
                                    </div>
                                {% elsif item.fieldType == 'select' %}
                                    <div class="form-group">
                                        {% if block.showFormLabels == 'True' %}
                                            <label class="form-label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                        {% endif %}
                                        {% include 'select-form-input' inputItem: item %}
                                    </div>
                                {% elsif item.fieldType == 'radio' %}
                                    <div class="form-group">
                                        <div class="radio-list">
                                            {% for radio in item.radioListItems %}
                                                <div class="radio-list__item">
                                                    <input class="radio-list__input" type="radio" id="{{radio.id}}" name="{{item.fieldName}}" value="{{radio.value}}"
                                                    {% if radio.isChecked == 'True' %} checked {% endif %}
                                                    {% if radio.isDisabled == 'True' %} disabled {% endif %}
                                                    {% include 'input-validation-attributes' inputItem: item %} />
                                                    <label class="radio-list__label" for="{{radio.id}}">
                                                        <span class="radio-list__t">{{radio.title}}</span>
                                                        <span class="radio-list__descr">{{radio.text}}</span>
                                                    </label>
                                                </div>
                                            {% endfor %}
                                        </div>
                                        {% include 'form-validation-message' inputItem: item %}
                                    </div>
                                {% elsif item.fieldType == 'label' %}
                                    <fieldset {% if item.fieldId != '' %}id="{{item.fieldId}}"{% endif %} class="form-group" {% include 'input-validation-attributes' inputItem: item %}>
                                        <legend class="form-label">{{item.labelText}}</legend>
                                        {% for input in item.labels %}
                                            <div class="form-group">
                                                <input type="checkbox" class="form-checkbox__input" id="{{item.fieldName}}{{forloop.index}}" name="{{item.fieldName}}" />
                                                <label class="form-checkbox__label" for="{{item.fieldName}}{{forloop.index}}">{{input.label}}</label>
                                            </div>
                                        {% endfor %}
                                        {% include 'form-validation-message' inputItem: item %}
                                    </fieldset>
                                {% elsif item.fieldType == 'button' %}
                                    <input type="submit" class="{{block.formSubmitButtonStyle}}" value="{{item.labelText}}" {% if block.formSubmitButtonColor == true and block.formSubmitButtonColor != '' %}style="background-color:{{block.formSubmitButtonColor}};border-color:{{block.formSubmitButtonColor}}"{% endif %} />
                                {% elsif item.fieldType == 'textarea' %}
                                    <div class="form-group">
                                        {% if block.showFormLabels == 'True' %}
                                            <label class="form-label" {% if item.fieldId != '' %} for="{{item.fieldId}}" {% endif %}>{{item.labelText}}</label>
                                        {% endif %}
                                        <textarea class="form-control" {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} name="{{item.fieldName}}" placeholder="{{item.placeholder}}"
                                        {% include 'input-validation-attributes' inputItem: item %}></textarea>
                                        {% include 'form-validation-message' inputItem: item %}
                                    </div>
                                {% elsif item.fieldType == 'hidden' %}
                                    <input type="text" {% if item.fieldId != '' %} id="{{item.fieldId}}" {% endif %} name="{{item.fieldName}}" value="{{item.fieldValue}}" style="display:none" />
                                {% endif %}
                            {% endfor %}
                        </form>
                    </div>
                    {% if block.advancedSection == 'True' %}
                        <div class="advanced-section ml-auto mr-auto mr-lg-0" {% if block.advancedSectionBackgroundColor != '' %}style="background-color:{{block.advancedSectionBackgroundColor}}"{% endif %}>
                            <div class="advanced-section--shape d-block text-center ml-auto mr-auto mb-3">or</div>
                            {% for item in block.advancedSectionItems %}
                                {% if item.type == 'button' %}
                                    {% assign item_button_style = '' %}
                                    {% if item.buttonFillColor != '' %}
                                        {% assign item_button_style = 'background-color:' | append: item.buttonFillColor %}
                                    {% endif %}
                                    {% if item.buttonTextColor != '' %}
                                        {% assign item_button_style = (item_button_style | append: ';color:') | append: item.buttonTextColor %}
                                    {% endif %}

                                    <a href="{{item.buttonUrl}}" class="btn btn--block {% if (forloop.index | plus: 1) < block.advancedSectionItems.size %}mb-3{% endif %} font-helvetica font-weight-bold" {% if item_button_style != '' %}style="{{item_button_style}}"{% endif %}>
                                        {% if item.buttonImage != '' and item.buttonImage.url != '' %}<img src="{{item.buttonImage.url}}" width="42" height="28" class="mr-1" />{% endif %}
                                        <span>{{item.value}}</span>
                                    </a>
                                {% else %}
                                    <div {% if (forloop.index | plus: 1) < block.advancedSectionItems.size %}class="mb-3"{% endif %}>
                                        <label>{{item.value}}</label>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                {% if block.horizontalAlignment == 'left' %}
                    <div class="col-lg {{block.verticalAlignment}} {% if block.formOrderFirstInMobile == 'True' %}order-1 order-lg-none{% endif %}">
                        {% if block.note != '' %}
                            {% include 'seo-text' tag: block.noteSeoTag, text: block.note, class: 'block__note' %}
                            <div class="block__space"></div>
                        {% endif %}

                        {% if block.title != '' %}
                            {% include 'seo-text' tag: block.titleSeoTag, text: block.title, class: 'block__t' %}
                        {% endif %}

                        {% include 'headings' headings: block.headings %}
                        <div class="block__space"></div>

                        {% if block.subtitle != '' %}
                            {% include 'seo-text' tag: block.subtitleSeoTag, text: block.subtitle, class: 'block__descr' %}
                        {% endif %}

                        {% include 'block-buttons' firstBtn: block.firstButton, secondBtn: block.secondButton %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>