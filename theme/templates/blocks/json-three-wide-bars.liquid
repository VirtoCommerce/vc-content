<div id="{{ block.__id }}" class="block {{block.topPadding}} {{block.bottomPadding}}
    {% if block.topDivider == 'True' %} block--divider-top {% endif %}
    {% if block.bottomDivider == 'True' %} block--divider-bottom {% endif %}
    {% if block.backgroundColorHex == '' %}{{block.backgroundColor}}{% endif %}"
    {% if block.backgroundColorHex != '' %}style="background-color:{{block.backgroundColorHex}}"{% endif %}">
    <div class="block__inner container">
        <div class="row">
            <div class="block__text {% if block.titleAlignment == 'center' %}text-center{% endif %} {{block.textAreaWidth}}">
                {% if block.title != '' %}
                    {% include 'seo-text' tag: block.titleSeoTag, text: block.title, class: 'block__t' %}
                    <div class="block__space block__space--size-lg"></div>
                {% endif %}
            </div>
        </div>

        {% if block.items.size > 0 %}
            {% if block.borderColor != '' %}
                <style>
                    #{{block.__id}} .list-cards .list__item .list__inner {
                        border: 1px solid {{block.borderColor}};
                    }
                </style>
            {% endif %}
            {% if block.useShadow == 'True' %}
                {% assign shadowHorizontal = '2px' %}
                {% if block.shadowHorizontalDirection == 'left' %}
                    {% assign shadowHorizontal = '-2px' %}
                {% endif %}

                {% assign shadowVertical = '-2px' %}
                {% if block.shadowVerticalDirection == 'bottom' %}
                    {% assign shadowVertical = '2px' %}
                {% endif %}

                <style>
                    #{{block.__id}} .list-cards .list__item .list__inner {
                        box-shadow: {{shadowHorizontal}} {{shadowVertical}} 2px 2px {{block.shadowColor}};
                    }
                </style>
            {% endif %}
            {% assign page_size = 3 %}
            {% if (block.pageSize != null or block.pageSize != '') and block.pageSize > 0 %}
                {% assign page_size = block.pageSize %}
            {% endif %}
            <div class="list list-cards list-cards--wide" data-page-size="{{page_size}}">
                {% for item in block.items %}
                    <div class="list__item"{% if forloop.index > (page_size | minus: 1) %} hidden{% endif %}>
                        <div class="list__inner" {% if item.color != '' %}style="background:{{item.color}}"{% endif %}>
                            {% if item.image != '' and item.image.url != '' %}
                                <div class="list__img">
                                    <img data-src="{{ item.image.url | image_url }}" {% if item.image.altText != '' %}title="{{item.image.altText}}"{% endif %} class="list__pic lazyload" />
                                </div>
                            {% endif %}
                            {% if item.subtitle != '' %}
                                <div class="list__descr">{{item.subtitle}}</div>
                            {% endif %}
                            {% include 'block-buttons' firstBtn: item.button %}
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% if block.moreButtonText != '' %}
                <a class="more-button text-center">{{block.moreButtonText}}</a>
            {% endif %}
        {% endif %}
    </div>
</div>
