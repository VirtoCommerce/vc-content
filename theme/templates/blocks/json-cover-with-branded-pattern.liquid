{% include 'overlay-color-hex-style-with-counter' predefinedColor: block.backgroundOverlayColor, customColor: block.backgroundOverlayColorHex %}

<div id="{{ block.__id }}">
    <div class="block block--author {% include 'cover-background-settings' %}>
        <div class="block__inner container">
            <div class="row">
                {% if block.title != '' %}
                    <div class="{{block.textAreaWidth}}">
                        {% include 'seo-text' tag: block.titleSeoTag, text: block.title, class: 'block__t' %}
                        {% include 'headings' headings: block.headings %}
                    </div>
                {% endif %}
            </div>
            <div class="row mt-5">
                {% if block.horizontalAlignment == 'left' %}
                    <div class="col-lg-6">
                        <div class="block__photo block__photo--pattern-{{block.pattern}} lazyload" data-bg="{{ block.containerImage.url | image_url }}"></div>
                    </div>
                {% endif %}

                <div class="col-lg-6 {{block.verticalAlignment}}">
                    {% if block.subtitle != '' %}
                        {% include 'seo-text' tag: block.subtitleSeoTag, text: block.subtitle, class: 'block__descr' %}
                    {% endif %}
                    {% include 'block-buttons' firstBtn: block.firstButton, secondBtn: block.secondButton %}
                    <div class="author-info">
                        {% include 'seo-text' tag: block.noteSeoTag, text: block.note, class: 'block__descr' %}
                    </div>
                </div>

                {% if block.horizontalAlignment == 'right' %}
                    <div class="col-lg-6">
                        <div class="block__photo block__photo--pattern-{{block.pattern}} lazyload" data-bg="{{ block.containerImage.url | image_url }}"></div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>