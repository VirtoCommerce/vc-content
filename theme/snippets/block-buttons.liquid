{% if firstBtn != '' and firstBtn.urlText != '' %}
    <div class="block__actions {{blockClass}} align-items-center">
        {% assign blockClass = '' %}

        {% assign first_btn_style = '' %}

        {% if block.firstButtonColor != '' %}
            {% assign first_btn_style = first_btn_style | append: 'background-color:' | append: block.firstButtonColor | append: ';' %}
            {% assign first_btn_style = first_btn_style | append: 'border-color:' | append: block.firstButtonColor | append: ';' %}
        {% endif %}
        {% if block.firstButtonColorText != '' %}
            {% assign first_btn_style = first_btn_style | append: 'color:' | append: block.firstButtonColorText | append: ';' %}
        {% endif %}

        {% if firstBtn.fillColor != '' %}
            {% assign first_btn_style = first_btn_style | append: 'background-color:' | append: firstBtn.fillColor | append: ';' %}
            {% if firstBtn.borderColor == null or firstBtn.borderColor == '' %}
                {% assign first_btn_style = first_btn_style | append: 'border-color:' | append: firstBtn.fillColor | append: ';' %}
            {% endif %}
        {% endif %}

        {% if firstBtn.borderColor == true %}
            {% if firstBtn.borderColor != '' %}
                {% assign first_btn_style = first_btn_style | append: 'border-color:' | append: firstBtn.borderColor | append: ';' %}
            {% endif %}
        {% endif %}

        {% if firstBtn.borderWidth == true and firstBtn.borderWidth != '' %}
            {% assign first_btn_style = first_btn_style | append: 'border-width:' | append: firstBtn.borderWidth | append: 'px;' %}
        {% endif %}

        {% if firstBtn.textColor != '' %}
            {% assign first_btn_style = first_btn_style | append: 'color:' | append: firstBtn.textColor | append: ';' %}
        {% endif %}

        {% assign first_btn_attributes = '' %}
        {% if firstBtn.openInNewTab == 'True' %}
            {% assign first_btn_attributes = first_btn_attributes | append: 'target="_blank"' %}
        {% endif %}
        {% if firstBtn.noFollow == 'True' %}
            {% assign first_btn_attributes = first_btn_attributes | append: ' rel="nofollow"' %}
        {% endif %}
        {% if first_btn_style != '' %}
            {% assign first_btn_attributes = first_btn_attributes | append: ' style="{{first_btn_style}}"' | render %}
        {% endif %}
        
        {% if firstBtn.style == 'btn-gradient' %}
            <a class="d-block gradient-btn {{firstBtnAdditionalClass}}" href="{{firstBtn.url}}">
                <span class="d-flex align-items-center justify-content-center text-center w-100 bg-white" {{first_btn_attributes}}>{{firstBtn.urlText}}</span>
            </a>
        {% else %}
            <a href="{{firstBtn.url}}" class="{{firstBtn.style}} {{firstBtnAdditionalClass}}" {{first_btn_attributes}}>{{firstBtn.urlText}}</a>
        {% endif %}

        {% assign firstBtnAdditionalClass = '' %}

        {% if secondBtn == true %}
            {% if secondBtn != '' and secondBtn.urlText != '' %}
                {% assign second_btn_style = '' %}
                {% if block.secondButtonColor != '' %}
                    {% assign second_btn_style = second_btn_style | append: 'background-color:' | append: block.secondButtonColor | append: ';' %}
                    {% assign second_btn_style = second_btn_style | append: 'border-color:' | append: block.secondButtonColor | append: ';' %}
                {% endif %}
                {% if block.secondButtonColorText != '' %}
                    {% assign second_btn_style = second_btn_style | append: 'color:' | append: block.secondButtonColorText | append: ';' %}
                {% endif %}
                
                {% if secondBtn.borderColor == true %}
                    {% if secondBtn.borderColor != '' %}
                        {% assign second_btn_style = second_btn_style | append: 'border-color:' | append: secondBtn.borderColor | append: ';' %}
                    {% endif %}
                {% endif %}

                {% if secondBtn.borderWidth == true and secondBtn.borderWidth != '' %}
                    {% assign second_btn_style = second_btn_style | append: 'border-width:' | append: secondBtn.borderWidth | append: 'px;' %}
                {% endif %}

                {% if second_btn_style.textColor != '' %}
                    {% assign second_btn_style = second_btn_style | append: 'color:' | append: second_btn_style.textColor | append: ';' %}
                {% endif %}

                {% if secondBtn.fillColor != '' %}
                    {% assign second_btn_style = second_btn_style | append: 'background-color:' | append: secondBtn.fillColor | append: ';' %}
                    {% assign second_btn_style = second_btn_style | append: 'border-color:' | append: secondBtn.fillColor | append: ';' %}
                {% endif %}
                {% if secondBtn.textColor != '' %}
                    {% assign second_btn_style = second_btn_style | append: 'color:' | append: secondBtn.textColor | append: ';' %}
                {% endif %}

                {% assign second_btn_attributes = '' %}
                {% if secondBtn.openInNewTab == 'True' %}
                    {% assign second_btn_attributes = second_btn_attributes | append: 'target="_blank"' %}
                {% endif %}
                {% if secondBtn.noFollow == 'True' %}
                    {% assign second_btn_attributes = second_btn_attributes | append: ' rel="nofollow"' %}
                {% endif %}
                {% if second_btn_style != '' %}
                    {% assign second_btn_attributes = second_btn_attributes | append: ' style="{{second_btn_style}}"' | render %}
                {% endif %}

                {% if secondBtn.style == 'btn-gradient' %}
                    <a class="d-block gradient-btn" href="{{secondBtn.url}}">
                        <span class="d-flex align-items-center justify-content-center text-center w-100 bg-white" {{second_btn_attributes}}>{{secondBtn.urlText}}</span>
                    </a>
                {% else %}
                    <a href="{{secondBtn.url}}" class="{{secondBtn.style}}" {{second_btn_attributes}}>{{secondBtn.urlText}}</a>
                {% endif %}
            {% endif %}
            {% assign secondBtn = '' %}
        {% endif %}
    </div>
{% endif %}