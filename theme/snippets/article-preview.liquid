<div class="list__item">
    {% if article.image_url and article.image_url != '' %}
        <a class="list__bg lazyload" href="{{ article.url }}" data-bg="{{ article.image_url | image_url }}"></a>
    {% elsif article.meta_info.markup_webpage_image and article.meta_info.markup_webpage_image != '' %}
        <a class="list__bg lazyload" href="{{ article.url }}" data-bg="{{ article.meta_info.markup_webpage_image | image_url }}"></a>
    {% else %}
        <a class="list__bg lazyload" href="{{ article.url }}" data-bg="{{ 'blue-abstract-background.jpg' | image_url }}"></a>
    {% endif %}
    <div class="list__info">
        {% if block.hideDateAndName != 'True' %}
            {% if article.permalink contains 'blog/' or article.permalink contains 'glossary/' %}
                <div class="list__descr">
                    {% assign article_date = '' %}
                    {% if article.meta_info.date %}
                        {% assign article_date = article.meta_info.date %}
                    {% else %}
                        {% assign article_date = article.meta_info.markup_webpage_date_created %}
                    {% endif %}
                    
                    {% assign days_difference = article_date | date_days_difference %}
                    {% if days_difference > 7 %}
                        <div class="article-date">{{article.meta_info.markup_webpage_date_created | date: "d MMM"}} • 5 min</div>
                    {% else %}
                        {% if days_difference == 0 %}
                            <div class="article-date">Today • 5 min</div>
                        {% else %}
                            <div class="article-date">{{days_difference}} days ago • 5 min</div>
                        {% endif %}
                    {% endif %}
                </div>
            {% endif %}
            <div class="list__t">
                <a href="{{ article.url }}" class="list__t">{{ article.meta_fields.articleTitle }}</a>
            </div>
        {% endif %}
    </div>
</div>