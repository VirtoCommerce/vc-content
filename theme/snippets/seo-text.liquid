{% assign text = text | replace: '&nbsp;', ' '  %}

{% if tag %}
    {% if tag != 'none' and tag != 'div' %}
        {% assign text = text | remove: '<p>' | remove: '</p>' | replace: '\n\n', '\n' | newline_to_br %}
    {% endif %}
{% endif %}

{% if tag == 'h1' %}
    <h1 class="{{class}}"{% if style != '' %} style="{{style}}"{% endif %}>{{text}}</h1>
{% elsif tag == 'h2' %}
    <h2 class="{{class}}"{% if style != '' %} style="{{style}}"{% endif %}>{{text}}</h2>
{% elsif tag == 'h3' %}
    <h3 class="{{class}}"{% if style != '' %} style="{{style}}"{% endif %}>{{text}}</h3>
{% elsif tag == 'h4' %}
    <h4 class="{{class}}"{% if style != '' %} style="{{style}}"{% endif %}>{{text}}</h4>
{% elsif tag == 'h5' %}
    <h5 class="{{class}}"{% if style != '' %} style="{{style}}"{% endif %}>{{text}}</h5>
{% elsif tag == 'h6' %}
    <h6 class="{{class}}"{% if style != '' %} style="{{style}}"{% endif %}>{{text}}</h6>
{% else %}
    <div class="{{class}}"{% if style != '' %} style="{{style}}"{% endif %}>{{text}}</div>
{% endif %}

{% assign style = '' %}